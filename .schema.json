{
    "app": {
        "description": "",
        "type": "object",
        "properties": [
            {
                "name": "name",
                "type": "string",
                "description": "What will be the name of your application?",
                "required": false,
                "default": "Kendo Mobile App"
            },
            {
                "name": "navigation",
                "type": "string",
                "description": "Which navigation type you choose?",
                "required": true,
                "default": "tabstrip",
                "enum": ["tabstrip", "drawer", "custom"]
            },
            {
                "name": "views",
                "type": "array",
                "description": "Which views you want to use?",
                "required": false,
                "no-prompt": true,
                "default": [],
                "enum": ["home"]
            },
            {
                "name": "view",
                "type": "string",
                "description": "Which will be your initial view?",
                "required": true,
                "default": "home"
            },
            {
                "name": "theme",
                "type": "string",
                "description": "Which theme you prefer?",
                "required": true,
                "default": "flat",
                "enum": ["flat", "bootstrap"]
            },
            {
                "name": "transition",
                "type": "string",
                "description": "Which transition type you prefer?",
                "required": true,
                "default": "slide",
                "enum": ["slide", "zoom", "fade"]
            },
            {
                "name": "dataProviders",
                "type": "array",
                "description": "List of Data Providers of the app.",
                "default": [],
                "required": false,
                "no-prompt": true
            }
        ]
    },
    "dataSource": {
        "name": "Kendo Mobile DataSource",
        "description": "",
        "type": "object",
        "properties": [
            {
                "name": "name",
                "type": "string",
                "description": "What is the name (id) of the DataSource?",
                "required": true,
                "default": "myDataSource"
            },
            {
                "name": "type",
                "type": "string",
                "description": "What type of Data Provider you choose?",
                "required": true,
                "default": "everlive",
                "enum": ["everlive", "odata", "json", "xml", "object"]
            },
            {
                "name": "everliveKey",
                "type": "string",
                "description": "What is your Everlive API key?",
                "default": "h8KnncMXaRhvMXmp"
            },
            {
                "name": "url",
                "type": "string",
                "description": "What is the service URL?",
                "default": "http://demos.telerik.com/kendo-ui/service/Northwind.svc"
            }
        ],
        "dependencies": [
            {
                "name": "type",
                "value": "everlive",
                "required": ["everliveKey"]
            },
            {
                "name": "type",
                "value": "odata",
                "required": ["url"]
            },
            {
                "name": "type",
                "value": "json",
                "required": ["url"]
            }
        ]
    },
    "view": {
        "name": "Kendo Mobile View",
        "description": "",
        "type": "object",
        "properties": [
            {
                "name": "name",
                "type": "string",
                "description": "What is the name (id) of the View?",
                "required": true,
                "default": "home"
            },
            {
                "name": "components",
                "type": "array",
                "description": "List of the children components of this view.",
                "default": [],
                "required": false,
                "no-prompt": true
            }
        ]
    },
    "signup": {
        "name": "Mobile Signup Form",
        "description": "",
        "type": "object",
        "properties": [
            {
                "name": "view",
                "type": "string",
                "description": "Which view you want to add the list to?",
                "required": true,
                "default": "home"
            },
            {
                "name": "name",
                "type": "string",
                "description": "What is the name of this component?",
                "required": true,
                "default": "signupForm"
            },
            {
                "name": "navigate",
                "type": "string",
                "description": "Which view to navigate on successful signup?",
                "default": "welcome"
            }
        ]
    },
    "list": {
        "name": "Kendo Mobile Databound List",
        "description": "",
        "type": "object",
        "properties": [
            {
                "name": "view",
                "type": "string",
                "description": "Which view you want to add the list to?",
                "required": true,
                "default": "home"
            },
            {
                "name": "name",
                "type": "string",
                "description": "What is the name of this component?",
                "required": true,
                "default": "myList"
            },
            {
                "name": "dataSource",
                "type": "string",
                "description": "What is the name of the DataSource you want to bind to?",
                "required": true,
                "default": "myDataSource"
            },
            {
                "name": "collection",
                "type": "string",
                "required": true,
                "description": "What is the name of the data collection?",
                "default": "Products"
            },
            {
                "name": "fields",
                "type": "array",
                "required": true,
                "description": "Which fields you want to pick?",
                "default": ["Id", "Name"],
                "items": [
                    {
                        "type": "string"
                    }
                ]
            }
        ]
    }
}
